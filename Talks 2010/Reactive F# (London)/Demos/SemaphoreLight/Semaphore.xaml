<UserControl x:Class="SemaphoreLight.Semaphore"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500" Height="400">

    <Canvas>
        <Ellipse Width="60" Height="60" Canvas.Top="0" Fill="LightGray" />
        <Ellipse Width="60" Height="60" Canvas.Top="70" Fill="LightGray" />
        <Ellipse Width="60" Height="60" Canvas.Top="140" Fill="LightGray" />
        
        <Ellipse x:Name="Green" Width="60" Height="60" Canvas.Top="0" Fill="Green" />
        <Ellipse x:Name="Orange" Width="60" Height="60" Canvas.Top="70" Fill="Orange" />
        <Ellipse x:Name="Red" Width="60" Height="60" Canvas.Top="140" Fill="Red" />
    </Canvas>
</UserControl>

